  <div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing: <%= book.title %></h1>
  </div>
  
  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Library</a></li>
            <li class="breadcrumb-item active"><%= book.title %></li>
          </ol>
        </nav>
      </div>
    </div>
  
  </div>

  <form action="/edit/<%= book._id %>?_method=PUT" method="POST">
  
    <div class="container">
      <div class="row">
        <div class="col-6">
              <label for="title">Title</label>
              <input type="text" class="form-control" id="title" name="title" value="<%= book.title %>" placeholder="Title" required>
        </div>
        <div class="col-6">
              <label for="imageLink">Image link</label>
              <input type="text" class="form-control" id="imageLink" name="imageLink" value="<%= book.imageLink %>" placeholder="Image link" required> 
        </div>

        <div class="col-4">
              <label for="year">Year</label>
              <input type="text" class="form-control" id="year" name="year" value="<%= book.year %>" placeholder="Year" required>
        </div>

        <div class="col-4">
              <label for="country">Country</label>
              <input type="text" class="form-control" id="country" name="country" value="<%= book.country %>" placeholder="Country" required>
        </div>  

        <div class="col-4">
              <label for="genre">Genre</label>
              <input type="text" class="form-control" id="genre" name="genre" value="<%= book.genre %>" placeholder="Genre" required>
        </div>

        <div class="col">
          <div class="form-group mb-4">
            <label for="description">Description</label>
            <textarea class="form-control" name="description" id="description" cols="30" rows="12" placeholder="Description"><%= book.description %></textarea>
        </div>
        </div>
      </div>
    </div>
  
    <div class="form-group mb-4">
      <a class="btn btn-primary rounded-pill px-4" href="/view/<%= book._id %>" style="margin-right: 10px;">Back</a>
      <button type="submit" class="btn btn-warning rounded-pill">Update</button>
    </div>
  
  </form>